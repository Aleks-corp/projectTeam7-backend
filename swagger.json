      "post": {
        "tags": ["Favorites-recipes"],
        "summary": "Add recipe to favorites",
        "security": [{ "Bearer": [] }],
        "parameters": [],
        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["id"],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Recipe ID",
                    "example": "ID"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "message": {
                      "type": "string",
                      "description": "Message",
                      "example": "Recipe added to favorites"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Not authorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Message",
                      "example": "This recipe is already in favorites"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
