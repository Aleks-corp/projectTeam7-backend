      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Token",
            "format": "JWT"
          },
          "id": {
            "type": "string",
            "description": "User's id",
            "format": "string"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "format": "text"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "avatarURL": {
            "type": "string",
            "description": "User's avatar",
            "example": "http://localhost:3000/avatar.jpg"
